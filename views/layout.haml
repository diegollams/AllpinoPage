!!!
%html
  %head
    %meta{:content => "width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no", :name => "viewport"}/
    %title Allpino
    %link{:href => "css/materialize.css", :media => "screen,projection", :rel => "stylesheet", :type => "text/css"}/

    
    - if @owl_css
      - @owl_css.each do |css|
        = "<link href=\"/#{css}\" rel='stylesheet' type='text/css'>"
    - if @photo_swipe_css
      - @photo_swipe_css.each do |css|
        = "<link href=\"/#{css}\" rel='stylesheet'>"
  %body

    %div.navbar-fixed
      %nav.blue-grey.darken-1
        .nav-wrapper
          %a.brand-logo{:href => "/"} Allpino
          %a.button-collapse{"data-activates" => "mobile-demo", :href => "#"}
            %i.mdi-navigation-menu
          %ul.right.hide-on-med-and-down
            %li
              %a{:href => "proyectos"} Proyectos
            %li
              %a{:href => "#"} Pasto Artificial
            %li
              %a{:href => "#"} Pasto Artificial
    %nav{style: "height: 0px;"}
      %ul#mobile-demo.side-nav
        %li
          %a{:href => "proyectos"} Proyectos
        %li
          %a{:href => "#"} Pasto Artificial
        %li
          %a{:href => "#"} Pasto Artificial
    
    
    
    .row{style: "margin-bottom: 0px;"}
      .card.blue-grey.darken-1
        .card-content.white-text
          %span.card-title 
            %h1.white-text
              Madereria y Construcciones Allpino 
        .card-action
          %a{:href => "#"} Obra publica
          %a{:href => "#"} Pasto artificial
          %a{:href => "#"} Velarias
    


    = yield

    %footer.page-footer.blue-grey.darken-1
      .container
        .row
          .col.s12.m4.l6
            %h5.white-text Contacto
            %row
              %form.col.s12{action: '/contact', method: 'POST'}
                .row
                  .input-field.col.s12
                    %i.mdi-action-account-circle.prefix
                    %input#email.validate{:type => "email", name: 'email'}/
                    %label{:for => "email"} Email
                .row
                  .input-field.col.s12
                    %i.mdi-editor-mode-edit.prefix
                    %textarea#textarea1.materialize-textarea{name: 'message'}
                    %label{:for => "textarea1" } Textarea

                .row
                  %button.btn.waves-effect.waves-light{:name => "action", :type => "submit",onclick: " $('#modal1').openModal();"}
                    Submit
                    %i.mdi-content-send.right
                

          .col.s12.m6.l3
            %h5.white-text Links
            %ul
              %li
                %a.grey-text.text-lighten-3{:href => "#!"} Facebook
              %li
                %a.grey-text.text-lighten-3{:href => "#!"} Pasto 
              %li
                %a.grey-text.text-lighten-3{:href => "#!"} Correo
              %li
                %a.grey-text.text-lighten-3{:href => "#!"} Link 4
          .col.s12.m6.l3
            %h5.white-text Links
            %ul
              %li
                %a.grey-text.text-lighten-3{:href => "#!"} Facebook
             
      .footer-copyright
        .container
          Â© 2014 Copyright Text
          %a.grey-text.text-lighten-4.right{:href => "#!"} Develop by Diego Llamas
    #modal1.modal
      .modal-content
        %h4 Gracias!
        %p Estaremos en contacto pronto.
      .modal-footer
        %a.waves-effect.waves-green.btn-flat.modal-action.modal-close{:href => "#"} Listo

    %script{:type=>"text/javascript", :src=>"https://code.jquery.com/jquery-2.1.1.min.js"}
    %script{:src => "js/materialize.min.js", :type => "text/javascript"}
    :javascript
      $(document).ready( function() {

        $('.button-collapse').sideNav({menuWidth: 240, activationWidth: 70});
        
        // the "href" attribute of .modal-trigger must specify the modal ID that wants to be triggered
        $('.modal-trigger').leanModal();
        
        
  
      } );
      

    = "<script src=\"/#{@owl_js}\"></script>" if @owl_js
    - if @photo_swipe_js
      - @photo_swipe_js.each do |js|
        = "<script src=\"/#{@js}\" type='text/javascript'></script>" 
